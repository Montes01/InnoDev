---
interface Props {
  name: string;
  image?: string;
}
const { name, image } = Astro.props;
---

<div class="p-1 rounded-[50%] bg-gradient-to-r from-primary to-white">
  <article class="w-28 h-28 cursor-pointer rounded-[50%] bg-secondary relative">
    <img
      src={image ?? "/Images/laptop.jpg"}
      class="w-full h-full rounded-[50%] object-cover object-center"
      alt={name}
    />
    <section
      class="rounded-[50%] h-full backdrop-blur-sm bg-black/60 top-0 absolute transition-opacity opacity-0 z-10 w-full grid place-content-center"
      id="CompanyText"
    >
      <small class="text-lg text-white [text-shadow:0px_2px_0px_rgb(0,0,0)]"
        >{name}</small
      >
    </section>
  </article>
</div>

<style>
  #CompanyText:hover {
    opacity: 1;
  }
</style>
