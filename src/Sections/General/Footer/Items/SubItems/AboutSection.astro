---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="gap-7 text-white flex flex-col w-[14rem]">
  <h3 class="text-2xl h-2/6 font-bold text-center">{title}</h3>
  <section
    class="self-start justify-start h-3/6 text-start md:text-start flex flex-col gap-2"
  >
    <slot />
  </section>
</section>
