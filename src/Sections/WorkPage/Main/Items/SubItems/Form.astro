---
import Input from "../../../../General/Input.astro";
const areaId = "MyAreaId";
const textAreaMessage =
  "Ingrese información esencial sobre la página que desea crear para que podamos mantener su estilo.";
---

<form action="" class="500px:w-5/6 1300px:w-4/6 w-full 500px:mx-0 px-4 flex flex-col justify-between gap-12">
  <Input
    isRequired={true}
    label="Nombre"
    placeholder="Ingresa tu nombre"
    name="Nombre"
  />
  <Input
    type="number"
    label="Telefono"
    placeholder="Ingresa tu telefono"
    name="telefono"
  />
  <section class="flex flex-col gap-3">
    <label class="w-full text-white self-start text-center px-5" for={areaId}> Informacion</label>
    <textarea
      name="Information"
      id={areaId}
      placeholder={textAreaMessage}
      class="p-5 border focus:outline-none max-h-52 rounded-xl"
      cols="30"
      rows="10"/>
  </section>
  <button class="self-center py-2 px-5 text-xl bg-white rounded-xl text-contrast hover:bg-primary border border-transparent hover:text-white hover:border hover:border-primary">Adquirir</button>
</form>
