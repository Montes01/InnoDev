---
import type { Package } from "../../../Consts/Types";
import PackageCard from "./Items/SubItems/PackageCard.astro";
interface Props {
  name: string;
  description: string;
  packages?: Package[];
}
const { packages } = Astro.props;
---

<section
  class="w-full  bg-primary text-white flex flex-col max-w-[2000px] gap-12 py-20 px-10"
>
  <h2 class="w-full text-center text-5xl font-bold mobile:text-xl">
    Paquetes disponibles
  </h2>
  {
    packages ? (
      <section class="flex flex-wrap w-full justify-center gap-10">
        {packages?.map((el) => (
          <PackageCard
            description={el.description}
            price={el.price}
            title={el.title}
          />
        ))}
      </section>
    ) : (
      <h2>Esta categoria no cuenta con nigun paquete</h2>
    )
  }
</section>
