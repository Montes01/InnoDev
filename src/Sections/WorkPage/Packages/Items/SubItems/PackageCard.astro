---
import type { Package } from "../../../../../Consts/Types";
interface Props extends Package {}
const { description, price, title } = Astro.props;
---

<article
  class="flex flex-col w-96 gap-5 h-[30rem] max-h-[80vh] bg-contrast rounded-xl text-white items-center p-5 justify-start cursor-pointer
  hover:scale-105 hover:brightness-105 hover:drop-shadow-[0_0_23px_white] hover:transition-transform

  "
>
  <strong class="text-2xl">{title}</strong>
  <section class="flex -gap-2 flex-col overflow-scroll">
    {description.map((el) => <p class="w-auto text-ellipsis">- {el}</p>)}
  </section>
</article>
