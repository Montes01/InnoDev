---
import type { Package } from "../../../../../Consts/Types";
interface Props extends Package {}
const { description, price, title } = Astro.props;
---

<article
  class="flex flex-col w-80 h-96 bg-primary rounded-xl text-contrast items-center justify-around"
>
  <strong>{title}</strong>
  <p class="px-5">{description}</p>
  <h3
    class="hover:bg-white hover:text-contrast border-transparent  text-lg font-bold bg-contrast border hover:border-contrast text-white cursor-pointer px-5 rounded hover:scale-110 transition-transform"
  >
    {`$${price}`}
  </h3>
</article>
