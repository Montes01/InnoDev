---
interface Props {
  text: string;
  image: `/${string}.${string}`;
}
const { text, image } = Astro.props;
---

<a
  href={`Service/${text}`}
  id="Card"
  class="2000px:h-96 rounded-md cursor-pointer relative overflow-hidden 500px:w-[47%] 500px:h-60 1500px:h-72 800px:w-[30%]"
>
  <img src={image} class="w-full h-full object-cover" alt="" />
  <h2
    id="Text"
    class="bottom-0 top-3/4 w-full drop-shadow-[0_0_3px_black] transition-all absolute font-bold text-xl text-white grid place-content-center left-1/2 z-50 -translate-x-1/2"
  >
    {text}
  </h2>

  <div
    id="BackDrop"
    class="absolute rounded-[50%] -left-2/4 -bottom-2/4 z-[1] bg-black/75"
  >
  </div>
</a>

<style>
  #Card:hover {
    & #BackDrop {
      width: 200%;
      height: 200%;
      animation: ShowBackDrop 0.5s;
    }
    & #Text {
      top: 0;
    }
  }

  @keyframes ShowBackDrop {
    0% {
      display: block;
      width: 0;
      height: 0;
    }
    100% {
      width: 200%;
      height: 200%;
    }
  }
</style>
