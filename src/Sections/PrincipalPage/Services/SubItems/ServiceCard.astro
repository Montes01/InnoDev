---
import { type Service } from "../../../../Consts/Types";
interface Props extends Service {}
const { title, image, prevDescription } = Astro.props;
---

<a
  href={`Service/${title}`}
  id="Card"
  class="2000px:h-96 rounded-md cursor-pointer relative overflow-hidden 500px:h-60 1500px:h-72"
>
  <img src={image} class="w-full h-full object-cover" alt="" />
  <h2
    id="Text"
    class="bottom-0 top-3/4 w-full drop-shadow-[0_0_3px_black] transition-all absolute font-bold text-xl text-white grid place-content-center left-1/2 z-20 -translate-x-1/2"
  >
    {title}
  </h2>
  <div id="prevDescription" class="absolute bottom-0 opacity-0 w-full flex flex-col items-center p-5 h-4/6 z-10">
    <p class="text-2xl text-center">{prevDescription}</p>
  </div>
  <div
    id="BackDrop"
    class="absolute rounded-[50%] -left-2/4 -bottom-2/4 z-[1] bg-black/75"
  >
  </div>
</a>

<style>
  #Card:hover {
    & #BackDrop {
      width: 200%;
      height: 200%;
      animation: ShowBackDrop 0.5s;
    }
    & #prevDescription {
      opacity: 1;
      animation: showSlow 0.5s linear;
    }
    & #Text {
      top: 0;
      bottom: 80%;
    }
  }

  @keyframes ShowBackDrop {
    0% {
      display: block;
      width: 0;
      height: 0;
    }
    100% {
      width: 200%;
      height: 200%;
    }
  }

  @keyframes showSlow {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
