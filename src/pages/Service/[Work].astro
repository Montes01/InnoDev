---
import Layout from "../../layouts/Layout.astro";
import { Messages, Titles, services } from "../../Consts/Consts";
import { Header } from "../../Sections/General/Header/Header";
import InfoPart from "../../Sections/WorkPage/InfoPart/InfoPart.astro";
import Buttons from "../../Sections/General/Header/Items/Buttons.astro";
import Logo from "../../Sections/General/Header/Items/Logo.astro";
import Main from "../../Sections/WorkPage/Main/Main.astro";
import Footer from "../../Sections/General/Footer/Footer.astro";
const { Work } = Astro.params;
const Service = services.find((el) => el.title === Work)  

if (!Service) return Astro.redirect("/404/NotFound");
---

<Layout title={Titles.TRABAJOS}>
  <InfoPart name={Work} description={Service? Service.description:null} packages={Service? Service.packages:null} />
  <Main
    name={Work}
    description={"this is my description"}
    principalImage={Service? Service.image:null}
  />
  <section class="pb-12 px-7">
    <p class="text-lg text-center text-red-600">{Messages.ALERT_CONTACT}</p>
  </section>
  <Footer />
</Layout>
